{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "[Clinet] Launch Chrome",
            "request": "launch",
            "type": "pwa-chrome",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}/client"
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "[API] Nodemon",
            "runtimeExecutable": "${workspaceRoot}/api/node_modules/.bin/nodemon",
            "args": ["${workspaceRoot}/api/bin/www,js"],
            "cwd": "${workspaceRoot}/api",
            "restart": true,
            "stopOnEntry": false,
            "runtimeArgs": [
                "-V",
                "--nolazy",
                "--require",
                "@babel/register",
                "--trace-warnings"
            ],
            "sourceMaps": true,
            "resolveSourceMapLocations": [
                "${workspaceFolder}/api/**",
                "!**/node_modules/**"
            ]
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "[API] Mocha Tests",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "-u",
                "bdd",
                "--timeout",
                "5000000000",
                "--colors",
                "--require",
                "@babel/register",
                "${workspaceFolder}/specs",
                "--require",
                "specs/hooks.js",
                "--recursive",
                "--trace-deprecation",
                "--exit"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "skipFiles": ["<node_internals>/**"],
            "sourceMaps": true,
            "runtimeExecutable": "/Users/jake/.nvm/versions/node/v14.13.1/bin/node",
            "resolveSourceMapLocations": [
                "${workspaceFolder}/**",
                "!**/node_modules/**"
            ],
            "env": { "NODE_ENV": "development" }
        }
    ]
}
